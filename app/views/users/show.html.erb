<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <span>
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg"%>
                </span>
              </td>
              <td>
                <span><%= link_to book.title, book_path(book.id) %></span>
              </td>
              <td>
                <span><%= book.body %></span>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>