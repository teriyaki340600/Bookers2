<div class="body">
  <div class="container">
    <%= flash[:notice] %>
    <div class="row">
      <%= render 'books/list', user: @user, book: @book1 %>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg"%><br>
                <% end %>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td>
                <span><%= link_to @book.title, "/books/#{@book.id}" %></span>
              </td>
              <td>
                <span><%= @book.body %></span>
              </td>
              <% if @user.id == current_user.id %>
              <td>
                <span><%= link_to "Edit", "/books/#{@book.id}/edit", class: "btn-sm btn-success" %></span>
              </td>
              <td>
                <span><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: "btn-sm btn-danger" %></span>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>